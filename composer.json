{
    "require": {
        "slim/slim": "^3.11",
        "robmorgan/phinx": "^0.10.6",
        "vlucas/phpdotenv": "^2.5",
        "slim/twig-view": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "BpDailyMenu\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "scripts": {
        "migrate": "vendor/bin/phinx migrate -e codeship",
        "seed": "vendor/bin/phinx seed:run -e codeship",
        "post-install-cmd": [
            "@migrate",
            "@seed"
        ]
    }
}
